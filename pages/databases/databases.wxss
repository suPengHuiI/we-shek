@import "../common/footbar/footbar.wxss";
page {
  background-color: #eee;
}
.tab{
  height:100rpx;
  width:100%;
  line-height: 100rpx;
  background-color:rgb(202,67,65);
}
.tab navigator{
  float:left;
  width:50%;
  text-align: center;
  color:#fff;
  height:100%;
  font-size: 28rpx;
  box-sizing: border-box;
}
.active{
  border-bottom:6rpx solid #ffffff;
}
.nav {
  position: fixed;
  right: 10rpx;
  top: 100rpx;
  height: 83%;
  width: 35rpx;
  font-family: Arial, Helvetica, sans-serif
}
.letter {
  width: 35rpx;
  height: 30rpx;
  font-size: 28rpx;
  line-height: 30rpx;
}
.letter-text {
  display: inline-block;
  width: 100%;
  height: 30rpx;
  line-height: 30rpx;
  text-align: center;
  border-radius: 50%;
}
.letter-actived {
  background-color: #ccc;
}
.search{
  height:100rpx;
  width:100%;
  background: #f0f0f0;
  border-bottom:6rpx solid #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}
.search_btn{
  width:50rpx;
  height: 50rpx;
  position: absolute;
  top:50%;
  left: 70rpx;
  margin-top:-25rpx;
}
.search input{
  width:650rpx;
  height: 60rpx;
  background-color: #fff;
  border-radius:20rpx;
  padding-left:80rpx;
  box-sizing:border-box;
  font-size:30rpx;
}
.groups {
  width:100%;
}
.group-name {
  padding: 10rpx 30rpx;
  height: 50rpx;
  line-height: 50rpx;
}
.group-users {
  background-color: #fff;
}
.user {
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 30rpx;
  border-bottom: 1px solid #eee;
}
.user-avatar {
  border-right: 1px solid #eee;
  width: 100rpx;
}
.user-avatar-img {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
}
.user-name {
  color:#000;
}
.user_detail{
  position: relative;
}
.del{
  position:absolute;
  width:110rpx;
  height:90rpx;
  right:60rpx;
  top:50%;
  margin-top:-45rpx;
  background-color:rgb(202,67,65);
  text-align: center;
  font-size: 30rpx;
  color:#ffffff;
  border-radius:10rpx;
  display:none;
}
.add{
  width:70rpx;
  height:70rpx;
  position:fixed;
  right:50rpx;
  bottom:250rpx;
  z-index: 9999;
}
.add image{
  width:100%;
  height:100%;
}
.architecture{
  width:35rpx;
  height:33rpx;
  position: fixed;
  top:110rpx;
  right: 10rpx;
}
.searchList{
  position: fixed;
  top:206rpx;
  left: 0;
  width: 100%;
  z-index: 999999;
  background: #fff;
  height: 100%;
  overflow-y: auto;
}