/* pages/home/home.wxss */
@import "../common/listItem/listItem.wxss";
@import "../common/footbar/footbar.wxss";
.home{
  width:100%;
  background-color:#fff;
}
.nav{
  width:100%;
  height:90rpx;
  display: flex;
  justify-content:space-around;
  align-items: center;
  font-size:32rpx;
  position: fixed;
  top:0;
  left:0;
  z-index: 9999; 
  color:#f0f0f0;
}
.nav view{
  height:100%;
  line-height: 90rpx;
  box-sizing: border-box;
}
.nav image{
  width:40rpx;
  height:40rpx
}
.active{
  border-bottom:2px solid #fff;
}
.active2{
  border-bottom:2px solid #fff336;
}
.list-container{
  height:100%;
  overflow: auto;
  width:100%;
}
.home>swiper{
  height:100%;
}
.publish{
  position:fixed;
  width: 250rpx;
  height: 250rpx;
  bottom:250rpx;
  right:50rpx;
  z-index: 999;
  text-align: center;
}
.publish image{
  width:70rpx;
  height:70rpx;
  position: absolute;
}
.publish image:nth-child(1){
  right: 0;
  top:0;
}
.publish image:nth-child(2){
  left: 90rpx;
  top:30rpx;
}
.publish image:nth-child(4){
  left: 30rpx;
  top:100rpx;
}
.publish image:nth-child(3){
  left: 0;
  bottom:0;
}
.publish image:nth-child(5){
  right: 0;
  bottom:0;
}
.animate{
  transform: rotate(45deg);
  transition: all 0.2s;
}
.backAnimate{
  transform: rotate(0);
  transition: all 0.2s;
}
.type_image{
  width:70rpx;
  height:70rpx;
  background-color:#f00;
  border-radius: 50%;
}
.show_points{
  width:80%;
  padding: 20rpx 10rpx;
  box-sizing: border-box;
  position:fixed;
  left: 50%;
  top: 90rpx;
  margin-left:-40%;
  z-index:9999;
  background-color:#fff;
  overflow: auto;
  font-size:32rpx;
}