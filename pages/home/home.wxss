/* pages/home/home.wxss */
@import "./listItem/listItem.wxss";
@import "../footbar/footbar.wxss";
.home{
  width:100%;
  background-color:#fff;
}
.nav{
  width:100%;
  height:90rpx;
  display: flex;
  justify-content:space-around;
  align-items: center;
  font-size:32rpx;
  position: fixed;
  top:0;
  left:0;
  z-index: 9999; 
  color:#f0f0f0;
}
.nav view{
  height:100%;
  line-height: 90rpx;
  box-sizing: border-box;
}
.nav image{
  width:40rpx;
  height:40rpx
}
.active{
  border-bottom:2px solid #fff;
}
.active2{
  border-bottom:2px solid #fff336;
}
.list-container{
  height:100%;
  overflow: auto;
  width:100%;
}
.home>swiper{
  height:100%;
}
.publish{
  position:fixed;
  width: 80rpx;
  bottom:250rpx;
  right:50rpx;
  z-index: 999;
  text-align: center;
}
.publish image:nth-child(1),.publish image:nth-child(2),.publish image:nth-child(3){
  width:70rpx;
  height:70rpx;
}
.animate{
  transform: rotate(45deg);
  transition: all 0.2s;
}
.backAnimate{
  transform: rotate(0);
  transition: all 0.2s;
}