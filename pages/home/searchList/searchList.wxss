/* pages/home/searchList/searchList.wxss */
@import "../listItem/listItem.wxss";
.search_list{
  width:100%;
}
.search_container{
  position:fixed;
  width:100%;
  height:90rpx;
  display: flex;
  align-items: center;
  justify-content:center;
  left:0;
  top:0;
  z-index: 99999; 
  background-color:rgb(202,67,65);
}
.search_container view{
  width:570rpx;
  height:60rpx;
  position:relative;
}
.search_container input{
  width:570rpx;
  height:60rpx;
  background-color: #fff;
  border-radius:6px;
  padding:0rpx 80rpx;
  box-sizing: border-box;
  font-size:26rpx;
}
.search_container .search_btn{
  width:40rpx;
  height:40rpx;
  position:absolute;
  top:50%;
  margin-top:-20rpx;
  left:30rpx;
  z-index:999;
}
.search_container .cancel{
  width:31rpx;
  height:31rpx;
  position:absolute;
  top:50%;
  margin-top:-15.5rpx;
  right:16rpx;
  z-index:999;
}
.search_container text{
  position:absolute;
  right:10px;
  font-size:32rpx;
  color:#fff;
}