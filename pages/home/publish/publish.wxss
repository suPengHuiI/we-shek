/* publishOne.wxss */
.tab{
  display: flex;
  height:100rpx;
  justify-content:space-around;
  align-items: center;
  border-bottom:10rpx solid #f0f0f0;
}
.tab text{
  font-size:26rpx;
  width:140rpx;
  height:50rpx;
  line-height: 50rpx;
  text-align: center;
  border-radius:6px;
}
.active{
  background-color:#f0f0f0;
  color:#323232;
}
.content textarea{
  font-size:28rpx;
  padding-top:30rpx;
  width:100%;
  box-sizing: border-box;
  min-height: 240rpx;
}
.content{
  padding: 0 20rpx;
  position:relative;
  min-height:310rpx;
  border-bottom:10rpx solid #f0f0f0;
  padding-bottom: 70rpx;
}
.content .picture{
  position:absolute;
  bottom:30rpx;
  width:40rpx;
  height:40rpx;
  z-index: 999;
  right: 40rpx;
}
.content view .microphone{
  right:112rpx;
}
.content view .picture{
  right:40rpx;
}
.imgcontainer{
  width: 100%;
  display: flex;
  flex-wrap:wrap;
  /*justify-content:space-between;*/
}
.up{
  width: 220rpx;
  height:220rpx;
  margin-bottom:10rpx;
  margin-left: 10rpx;
  position: relative;
}
.up image:nth-child(2){
  width:100%;
  height:100%;
}
.del{
  position:absolute;
  right:10rpx;
  top:10rpx;
  width:30rpx;
  height:30rpx;
  padding:2rpx;
  border:1rpx solid #d81e06;
  border-radius:6rpx;
}
.datecontainer{
  padding:20rpx 26rpx;
  font-size: 32rpx;
  height:100rpx;
  line-height: 60rpx;
  box-sizing: border-box;
  border-bottom:1rpx solid #f0f0f0;
  display: flex;
}
.datecontainer>input{
  width:500rpx;
  height:100%;
}
.datecontainer .host,.datecontainer label{
  height:100%;
  padding-left: 55rpx;
}
.come{
  display: flex;
}
.come view{
  width:327rpx;
  display: flex;
  align-items: center;
}
.come view input{
  text-align: right;
  padding-right: 20rpx;
  width:110rpx;
  height:100%;
}
.host{
  background: url('http://www.wsspha.cn/images/person.png') no-repeat center left;
  background-size:32rpx 30rpx;
}
.come label{
  background: url('http://www.wsspha.cn/images/qiandao.png') no-repeat center left;
  background-size:30rpx 30rpx;
}
.subject{
  background: url('http://www.wsspha.cn/images/zhuti.png') no-repeat center left;
  background-size:30rpx 30rpx;
}
.postion{
  background: url('http://www.wsspha.cn/images/dizhi.png') no-repeat center left;
  background-size:24rpx 30rpx;
}
.date{
  padding-left: 55rpx;
  background: url('http://www.wsspha.cn/images/time.png') no-repeat center left;
  background-size:32rpx 31rpx;
}
.btn{
  position:relative;
  width: 100%;
  margin: 20rpx 0;
  height:80rpx;
}
.save{
  position: absolute;
  top:50%;
  left:50%;
  width:600rpx;
  height:80rpx;
  margin-left:-300rpx;
  margin-top:-40rpx;
  line-height: 80rpx;
  text-align: center;
  background-color:#ca4341;
  border-radius:10rpx;
  color:#fff;
}
.plus{
  width:220rpx;
  height:220rpx;
  box-sizing: border-box;
  border:1rpx solid #bfd4d1;
  margin-left: 10rpx;
}