/* login.wxss */
.login{
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction:column;
  align-items: center;
  padding:0 60rpx;
  box-sizing: border-box;
  background:url('http://www.wsspha.cn/images/bg.png') no-repeat;
  background-size: 100% 100%;
}
.usercontainer{
  position:relative;
  margin-top:80rpx;
}
.usercontainer image{
  position:absolute;
  width:40rpx;
  height:40rpx;
  left:10rpx;
  top:50%;
  margin-top:-20rpx;
}
.logo{
  width:120rpx;
  height:120rpx;
  padding:80rpx 0 60rpx 0;
}
input{
  width:600rpx;
  font-size:32rpx;
  height: 60rpx;
  padding-left:35px;
  box-sizing: border-box;
}
.user{
  border-bottom:1rpx solid #868686;
}
.pwd{
  border-bottom:1rpx solid #ccc;
}
.err{
  width:600rpx;
  line-height: 60rpx;
  height:60rpx;
  font-size:30rpx;
  color:#ca4341;
}
.btn{
  width:600rpx;
  height:80rpx;
  margin-top:80rpx;
  line-height: 80rpx;
  background-color:#ca4341;
  font-size:32rpx;
  color:#ffffff;
  text-align: center;
  border-radius:10rpx;
}