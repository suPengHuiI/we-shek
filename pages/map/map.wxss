/* pages/map/map.wxss */
#map{
  width:100%;
  height:100%;
}
cover-view{
  white-space:pre-line !important;
  line-height:inherit;
}
.active{
  background-color:rgba(0,0,0,0.2);
}
.go_detail{
  position:fixed;
  bottom:0;
  left:0;
  width:100%;
  height:15%;
  background-color:#fff;
  z-index:99999;
  display: flex;
  align-items: center;
}
.select_position{
  position: fixed;
  top:30rpx;
  right: 30rpx;
  width:360rpx;
  height: 60rpx;
  line-height: 60rpx;
  background-color: #fff;
  font-size: 32rpx;
  box-sizing: border-box;
  padding-left:40rpx;
}
.select_lists{
  position: fixed;
  top:91rpx;
  right: 30rpx;
  width:360rpx;
  background-color: #fff;
  font-size: 32rpx;
  box-shadow: 2px 4px 4px 2px rgba(0,0,0,0.2);
  z-index: 9999;
}
.select_lists cover-view{
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
}
.route{
  width:50px;
  height: 50px;
  position: fixed;
  top:70%;
  right: 20rpx;
  z-index: 99999;
}
.route cover-image{
  width:50px;
  height: 50px;
}
.detaiL_list{
  position: fixed;
  top:110rpx;
  right: 30rpx;
  width:360rpx;
  font-size: 32rpx;
  overflow-y: auto;
  box-shadow: 2px 4px 4px 2px rgba(0,0,0,0.2);
}
.detaiL_list cover-view cover-view:nth-child(1){
  display: flex;
  align-items: center;
  height: 70rpx;
  line-height: 70rpx;
  background-color: #fff;
  margin-bottom:1px;
}
.detaiL_item{
  height: 70rpx;
  line-height: 70rpx;
  background-color: #fff;
  margin-bottom:1px;
  padding-left:10rpx;
}
.detaiL_list cover-image{
  width:44rpx;
  height: 44rpx;
  padding:13rpx 20rpx;
}
.detaiL_list text{
  height: 70rpx;
  line-height: 70rpx;
}
.btn{
  position:absolute;
  right:0;
  top:50%;
  width:20%;
  height:100rpx;
  margin-top:-50rpx;
  line-height:100rpx !important;
  color:#509ffc;
  display: flex;
  align-items: center;
}
.route{
  position:fixed;
  right:40rpx;
  bottom:100rpx;
  z-index:666666;
}
.route image{
  width:120rpx;
  height:120rpx;
}
.detail_content{
  width:75%;
  height:100%;
  font-size: 36rpx;
  padding-left:40rpx;
  box-sizing: border-box;
  white-space:pre-line !important;
  overflow:auto !important;
  color:#646464;
  display: flex;
  align-items: center;
}